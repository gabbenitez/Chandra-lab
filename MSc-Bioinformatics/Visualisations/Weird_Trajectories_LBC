ggplot(LBC_36_W4, aes(x=initial_DNAmTL, y=totaldelta)) +
  geom_jitter(shape=16, position=position_jitter(0.2), alpha = 0.6, size = 0.2)+
  geom_boxplot(width = 0.8, color = "black", alpha = 1) +
